{
    "window.zoomLevel": 2,
    "editor.rulers": [80, 120],
    "workbench.colorCustomizations": { "editorRuler.foreground": "#151515" },
    "files.trimTrailingWhitespace": true,
    "editor.tabSize": 2,
    "editor.insertSpaces": true,
    "editor.trimAutoWhitespace": true,
    "editor.fontFamily": "Dank Mono, Menlo, Monaco, 'Courier New', monospace",
    "editor.fontSize": 13,
    "editor.lineHeight": 15,
    "editor.tokenColorCustomizations": {
        "textMateRules": [
            {
                "name": "comment",
                "scope": ["comment"],
                "settings": {
                    "fontStyle": "italic"
                }
            }
        ]
    },
    "editor.renderWhitespace": "all",
    "extensions.ignoreRecommendations": false,
    "editor.renderIndentGuides": true,
    "ActiveFileInStatusBar.fullpath": false,
    "ActiveFileInStatusBar.color": "#222",
    "go.useLanguageServer": true,
    "terraform.telemetry.enabled": false,
    "terraform.indexing.enabled": false,
    "terraform.languageServer.enabled": true,
    "terminal.integrated.env.osx": {
        "VSCODE_INTEGRATED_TERMINAL": "true"
    },
    "terraform.languageServer": {
        "external": true,
        "args": [
            "serve"
        ]
    },
    "workbench.settings.editor": "json",
    "javascript.validate.enable": false,
    "files.watcherExclude": {
        "**/.bloop": true,
        "**/.metals": true,
        "**/.ammonite": true
    }
}


